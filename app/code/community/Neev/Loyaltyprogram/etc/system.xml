                        <!--</loyaltyprogram_rewards_special_rewards_points_2>-->
                        <loyaltyprogram_rewards_gained_email>
                            <label>Transaction Email template for gained Points</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Empty value disables sending email</comment>
                        </loyaltyprogram_rewards_gained_email>
                        <loyaltyprogram_rewards_redeemed_email>
                            <label>Transaction Email template for redeemed Points</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
